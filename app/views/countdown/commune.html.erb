<!DOCTYPE html>

<html>

<head>
  <title>Wasp Syrup</title>
  <style type="text/css">
  body {
    background: #FFFFFF;
  }


  .countdownContainer{
    position: absolute;;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    text-align: center;
    background: #fff;
    border: 0px solid #999;
    padding: 10px;
    width: 700px;
    height: 200px;
    opacity: 0%
  }
  .info{
    font-size: 80px;
  }
  .backDrop{
    position: absolute;;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    text-align: justify;
    font-size: 250px
  }
  </style>
</head>

<body>

  <table style="color:snow;text-align:center;font-family:bookman old style;height:120%;" class="backDrop">
    <tr>
      <td>WASP2</td>
    </tr>
    <tr>
      <td>SYRUP</td>
    </tr>
  </table>

  <table style="color:purple;text-align:center;font-family:georgia;" class="countdownContainer">
    <tr class="info">
      <td colspan="4"></td>
    </tr>
    <tr class="info">
      <td id="days">
        <table width= "100" border= 0px cellpadding= "5">6</table>
      </td>
      <td id="hours">24
        <table width= "100" border= 0px cellpadding= "5">24</table>
      </td>
      <td id="minutes">60
        <table width= "100" border= 0px cellpadding="5">60</table>
      </td>
      <td id="seconds">60
        <table width= "100" border= 0px cellpadding="5">60</table>
      </td>
    </tr>
    <tr>
      <td>
        <table width= "100" border= 0px cellpadding="2">Days</table>
      </td>
      <td>
        <table width= "100" border= 0px cellpadding="2">Hours</table>
      </td>
      <td>
        <table width= "100" border= 0px cellpadding="2">Minutes</table>
      </td>
      <td>
        <table width= "100" border= 0px cellpadding="2">Seconds</table>
      </td>
    </tr>
  </table>

  <script type="text/javascript">
    function countdown(){

      var now = new Date();
      var eventDate = new Date(2016, 9, 21);

      var currentTime = now.getTime();
      var eventTime = eventDate.getTime();
      <!-- remTime is remaining time -->
      var remTime = eventTime - currentTime;
      <!-- Convert remaining time from milliseconds to respective units -->

      var s = Math.floor(remTime/1000);
      var m = Math.floor(s/60);
      var h = Math.floor(m/60);
      var d = Math.floor(h/24);

      s %= 60;
      m %= 60;
      h %= 24;

      h = (h < 10) ? "0" + h : h;
      m = (m < 10) ? "0" + m : m;
      s = (s < 10) ? "0" + s : s;

      document.getElementById("days").textContent = d;
      document.getElementById("days").innerText = d;

      document.getElementById("hours").textContent = h;
      document.getElementById("minutes").textContent = m;
      document.getElementById("seconds").textContent = s;

      setTimeout(countdown, 1000);

    }

    countdown();

  </script>


</body>

</html>
